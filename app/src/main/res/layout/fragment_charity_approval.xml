<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CharityApprovalFragment"
    android:background="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="141dp"
                android:layout_height="108dp"
                android:src="@drawable/undraw_pending_approval_xuu9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="You are almost there !"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileLayout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="As the manager of this organisation, please enter the details below to get approval."
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="30dp">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorTextIcons"
            android:fillViewport="true">

            <EditText
                android:id="@+id/charityBioEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="About the organization.."
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingLeft="10dp"
                android:textSize="20dp" />

        </ScrollView>

        <TextView
            android:id="@+id/uploadTrustDeedTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll"
            android:layout_marginTop="20dp"
            android:text="Please upload your trust-deed"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/uploadTrustDeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadTrustDeedTxtView"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:drawableStart="@drawable/ic_baseline_file_upload_24"
            android:padding="10dp"
            android:textAllCaps="false"
            android:text="Upload"
            android:textColor="@color/colorTextIcons"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/approvalBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadTrustDeed"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Get Approval" />
    </RelativeLayout>

</RelativeLayout>