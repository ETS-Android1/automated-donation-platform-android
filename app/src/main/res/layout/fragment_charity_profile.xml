<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CharityProfileFragment"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:id="@+id/infoLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/emailLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_boat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <EditText
                android:id="@+id/charityEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/charityEmailEditText"
                android:layout_toRightOf="@+id/text_view_boat1"
                android:background="@android:drawable/editbox_background"
                android:drawableEnd="@drawable/ic_baseline_edit_24"
                android:ems="10"
                android:hint="inua.dada@dada.org"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="20dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:orientation="vertical"
            android:layout_below="@id/emailLayout"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_boat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="20dp"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/charityPhoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_view_boat2"
                android:background="@android:drawable/editbox_background"
                android:drawableEnd="@drawable/ic_baseline_edit_24"
                android:ems="10"
                android:hint="020-0011029394"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="20dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/aboutLayout"
            android:orientation="vertical"
            android:layout_below="@id/phoneLayout"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us: "
                android:textSize="20dp"
                android:layout_alignParentLeft="true" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_view_about"
                android:layout_weight="1"
                android:fillViewport="true">

                <EditText
                    android:id="@+id/charityAboutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:ems="10"
                    android:hint="To improve the life  opportunities of youth aged 10-24 through strategic empowerment for sustainable development."
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trustLayout"
            android:orientation="vertical"
            android:layout_below="@id/aboutLayout"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_trust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Trust Deed: "
                android:layout_centerVertical="true"
                android:textSize="20dp" />


            <Button
                android:id="@+id/trustDeedBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_view_trust"
                android:background="@android:drawable/editbox_background"
                android:drawableStart="@drawable/ic_baseline_picture_as_pdf_24"
                android:drawableEnd="@drawable/ic_baseline_edit_24"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAllCaps="false"
                android:hint=" Trust Deed .."
                android:textSize="20dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/updateCharityBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:text="Update"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorTextIcons"
            android:textSize="20dp"
            app:cornerRadius="50dp" />
    </RelativeLayout>

</RelativeLayout>