<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BeneficiariesFragment"
    android:background="@color/colorAccent">
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="match_parent"
        android:id="@+id/progress_circular"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/beneficiaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryText"
        android:text="Beneficiary Testimonials"

        android:textStyle="bold"
        android:textSize="20dp">
    </TextView>

    <Button
        android:id="@+id/addBeneficiaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Beneficiary"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextIcons"
        android:layout_below="@id/beneficiaryLabel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:textSize="18dp"
        />
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:indeterminate="true"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/beneficiaryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addBeneficiaryBtn"
        android:layout_marginTop="10dp" />


</RelativeLayout>